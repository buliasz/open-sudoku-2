<resources>
    <declare-styleable name="SeekBarPreference">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="value" format="integer" />
        <attr name="valueFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="SudokuBoardView">
        <attr name="lineColor" format="color" />
        <attr name="sectorLineColor" format="color" />

        <!-- Cell is editable, contains text or notes -->
        <attr name="textColor" format="color" />
        <attr name="textColorNote" format="color" />
        <attr name="backgroundColor" format="color" />

        <!-- Cell is not editable, contains a valid value -->
        <attr name="textColorReadOnly" format="color" />
        <attr name="backgroundColorReadOnly" format="color" />

        <!-- Cell is being touched -->
        <attr name="textColorTouched" format="color" />
        <attr name="textColorNoteTouched" format="color" />
        <attr name="backgroundColorTouched" format="color" />

        <!-- Cell is selected (color of the selection frame) -->
        <attr name="backgroundColorSelected" format="color" />

        <!-- Cell is highlighted -->
        <attr name="textColorHighlighted" format="color" />
        <attr name="textColorNoteHighlighted" format="color" />
        <attr name="backgroundColorHighlighted" format="color" />

        <!-- Cell is editable, contains an invalid value -->
        <attr name="textColorInvalid" format="color" />
        <attr name="backgroundColorInvalid" format="color" />

        <!-- Cell is editable, contains text or notes, is in an even numbered box -->
        <attr name="textColorEven" format="color" />
        <attr name="textColorNoteEven" format="color" />
        <attr name="backgroundColorEven" format="color" />
    </declare-styleable>

    <declare-styleable name="NumberButton">
        <!-- True if all numbers for this button are placed -->
        <attr name="all_numbers_placed" format="boolean" />
    </declare-styleable>
</resources>
