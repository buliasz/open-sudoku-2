<resources>
    <declare-styleable name="SeekBarPreference">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="value" format="integer" />
        <attr name="valueFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="SudokuBoardView">
        <attr name="colorLine" format="color" />
        <attr name="colorSectorLine" format="color" />

        <!-- Cell is editable, contains text or notes -->
        <attr name="colorText" format="color" />
        <attr name="colorNoteText" format="color" />
        <attr name="colorBackground" format="color" />

        <!-- Cell is not editable, contains a valid value -->
        <attr name="colorReadOnlyText" format="color" />
        <attr name="colorReadOnlyBackground" format="color" />

        <!-- Cell is being touched -->
        <attr name="colorTouchedText" format="color" />
        <attr name="colorTouchedNoteText" format="color" />
        <attr name="colorTouchedBackground" format="color" />

        <!-- Cell is selected (color of the selection frame) -->
        <attr name="colorSelectedBackground" format="color" />

        <!-- Cell is highlighted -->
        <attr name="colorHighlightedText" format="color" />
        <attr name="colorHighlightedNoteText" format="color" />
        <attr name="colorHighlightedBackground" format="color" />

        <!-- Cell is editable, contains an invalid value -->
        <attr name="colorInvalidText" format="color" />
        <attr name="colorInvalidBackground" format="color" />

        <!-- Cell is editable, contains text or notes, is in an even numbered box -->
        <attr name="colorEvenText" format="color" />
        <attr name="colorEvenNoteText" format="color" />
        <attr name="colorEvenBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="NumberButton">
        <!-- True if all numbers for this button are placed -->
        <attr name="all_numbers_placed" format="boolean" />
    </declare-styleable>
</resources>
