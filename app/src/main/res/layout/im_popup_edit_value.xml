<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="4dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<TableRow android:layout_height="wrap_content"
		android:orientation="horizontal">

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_1"
			style="@style/popupButton"
			android:text="1"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_2"
			style="@style/popupButton"
			android:text="2"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_3"
			style="@style/popupButton"
			android:text="3"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.IconButton android:id="@+id/enter_number"
			style="@style/popupButton"
			android:contentDescription="@string/cell_value"
			app:icon="@drawable/ic_enter_number"
			app:iconGravity="textStart"/>
	</TableRow>

	<TableRow android:layout_height="wrap_content"
		android:orientation="horizontal">

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_4"
			style="@style/popupButton"
			android:text="4"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_5"
			style="@style/popupButton"
			android:text="5"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_6"
			style="@style/popupButton"
			android:text="6"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.IconButton android:id="@+id/corner_note"
			style="@style/popupButton"
			android:contentDescription="@string/corner_note"
			app:icon="@drawable/ic_corner_note"
			app:iconGravity="textStart"/>
	</TableRow>

	<TableRow android:layout_height="wrap_content"
		android:orientation="horizontal">

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_7"
			style="@style/popupButton"
			android:text="7"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_8"
			style="@style/popupButton"
			android:text="8"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.NumberButton android:id="@+id/button_9"
			style="@style/popupButton"
			android:text="9"
			tools:ignore="HardcodedText"/>

		<org.buliasz.opensudoku2.gui.IconButton android:id="@+id/center_note"
			style="@style/popupButton"
			android:contentDescription="@string/center_note"
			app:icon="@drawable/ic_center_note"
			app:iconGravity="textStart"/>
	</TableRow>

	<TableRow android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button android:id="@+id/button_clear"
			style="@style/Widget.Material3.Button.TextButton.Dialog"
			android:text="@string/clear"/>

		<View android:layout_span="2"
			android:layout_height="0dp"
			android:layout_width="0dp"/>

		<Button android:id="@+id/button_close"
			style="@style/Widget.Material3.Button.TextButton.Dialog"
			android:text="@string/close"/>
	</TableRow>
</TableLayout>
