<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<androidx.recyclerview.widget.RecyclerView android:id="@+id/folder_list_recycler"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:drawSelectorOnTop="false" />

	<TextView android:id="@+id/get_more_puzzles_online"
		style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/get_more_puzzles_online" />

	<Button android:id="@+id/get_more_puzzles_from_os1"
		style="@style/Widget.Material3.Button.TextButton.Icon"
		app:icon="@drawable/ic_baseline_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/open_sudoku_1" />

	<Button android:id="@+id/get_more_puzzles_from_sepb"
		style="@style/Widget.Material3.Button.TextButton.Icon"
		app:icon="@drawable/ic_baseline_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/sudoku_exchange_puzzle_bank" />

	<Button android:id="@+id/get_more_puzzles_from_sudocue"
		style="@style/Widget.Material3.Button.TextButton.Icon"
		app:icon="@drawable/ic_baseline_download"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/sudocue" />

</LinearLayout>
